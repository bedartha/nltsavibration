title = {{Quasi-periodic Vortical Signature of an Elastically Mounted Flapping Airfoil}},
year = {2017}
}
@inproceedings{Takagi2017,
abstract = {{\textcopyright} 2018 Combustion Institute. All Rights Reserved. We numerically conduct a detailed study on the dynamic behavior of a buoyancy-induced turbulent fire using nonlinear time series analysis. Here, we focus on the complexity of temperature fluctuations which estimate the degree of randomness and disequilibrium in the underlying dynamics. The multiscale complexity-entropy causality plane (CECP) clearly shows the possible presence of two class of dynamics: low-dimensional chaos in the near-field dominated by the motion of large-scale vortices and high-dimensional chaos in the far-field forming a well-developed turbulent plume.},
