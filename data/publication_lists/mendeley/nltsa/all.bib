author = {Brock, William a},
booktitle = {Estudios Economicos},
doi = {10.1021/ic00130a006},
isbn = {01867202},
issn = {0264-9993},
mendeley-groups = {NLTSA Studies},
title = {{Pathways to Randomness in the Economy: Emergent Nonlinearity and Chaos in Economics and Finance}},
year = {1993}
}
@inproceedings{Mende1993,
abstract = {Cries of newborn infants have been analyzed using high resolution spectrograms (sonograms), methods from nonlinear time series analysis and a special new pitch determination algorithm, which is especially designed to track harmonics and subharmonic components in noisy regions. Eigenvalue analysis has been applied for noise reduction. The noisy regions in the spectrograms reveal a complex pattern of subharmonics. A lower and a higher group of harmonics is influenced by two independent but weakly coupled oscillators. Sometimes the harmonics are well synchronized forming a uniform harmonic pattern with a high harmonic to noise ratio and the noise background is considerably reduced. In other phases the two groups exhibit a nonharmonic frequency ratio as an indicator of desynchronization. The noise floor is higher although a deterministic dynamic component seems to exist.},
