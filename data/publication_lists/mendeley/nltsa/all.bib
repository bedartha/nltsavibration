title = {{Testing for nonlinearity in non-stationary physiological time series}},
year = {2011}
}
@article{Harris2011,
abstract = {Electroencephalogram (EEG) - the recorded representation of electrical$\backslash$nactivity of the brain contain useful information about the state$\backslash$nof the brain. Recent studies indicate that nonlinear methods can$\backslash$nextract valuable information from neuronal dynamics. We compare the$\backslash$ndynamical properties of EEG signals of healthy subjects with epileptic$\backslash$nsubjects using nonlinear time series analysis techniques. Chaotic$\backslash$ninvariants like correlation dimension (D2) , largest Lyapunov exponent$\backslash$n(lambda1), Hurst exponent (H) and Kolmogorov entropy (K) are used$\backslash$nto characterize the signal. Our study showed clear differences in$\backslash$ndynamical properties of brain electrical activity of the normal and$\backslash$nepileptic subjects with a confidence level of more than 90{\%}. Furthermore$\backslash$nto support this claim fractal dimension (FD) analysis is performed.$\backslash$nThe results indicate reduction in value of FD for epileptic EEG indicating$\backslash$nreduction in system complexity.},
