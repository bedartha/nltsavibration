journal = {Neuroscience},
keywords = {DH,DRG,IEI,ISI,brief bursts,correlation dimension,dorsal horn,dorsal root ganglion,interevent interval,interevent interval (IEI),interspike interval,mutual information,nonlinear prediction,return map},
mendeley-groups = {NLTSA Studies},
pmid = {15120864},
title = {{Synaptic transmission of chaotic spike trains between primary afferent fiber and spinal dorsal horn neuron in the rat}},
year = {2004}
}
