journal = {International Journal of Bifurcation {\&} Chaos in Applied Sciences {\&} Engineering},
keywords = {BRAIN stem,HILBERT-Huang transform,LINEAR systems,LYAPUNOV exponents,NONLINEAR systems,SIGNAL processing,Speech auditory brainstem response,TIME series analysis,composite multiscale entropy,ensemble empirical mode decomposition,largest Lyapunov exponent,nonlinear dynamics},
