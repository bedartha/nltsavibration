mendeley-groups = {NLTSA Studies},
title = {{Nonlinear time series analysis of food intake in the dab and the rainbow trout}},
year = {2007}
}
@article{Kurz2007,
abstract = {There is a growing body of evidence that the nonlinear structure of human movement patterns is related to how the nervous system is organized for controlling movement. Reliable models that closely resemble the nonlinear dynamics of human movement are required to advance our knowledge in this field. These models will accelerate our understanding of the nature of nonlinear movement patterns, and will provide meaningful predictions of which neuromechancial variables govern the observed nonlinear dynamics. Previously we have successfully used passive dynamic walking computer models to make predictions about how the neuromechanics of the locomotive system influence the nonlinear gait patterns of humans. These computer models have inspired us to explore whether a physical passive dynamic walking robot can also exhibit a deterministic nonlinear gait pattern. Recently, we have built a simple passive dynamic walking robot that is capable of a long-term walking pattern on a slightly inclined treadmill that operates in reverse. We used a high speed three-dimensional motion capture system to evaluate the limb kinematics of the robot's gait. Nonlinear time series analysis techniques were used to determine the time lag, embedding dimension and Theiler's window for proper reconstruction of the robot's gait dynamics. The Lyapunov exponent (LyE) was calculated for the leg angle time series to evaluate the structure of the nonlinear variations present in the robot's gait, and a pseudo-periodic surrogate analysis was conducted to determine whether the variations in the robot's gait pattern were stochastic or deterministic. Our results indicate that our passive dynamic robot has a deterministic nonlinear gait pattern that may be chaotic. This walking robot is the first of its kind and will provide a new scientific platform for testing the variables that govern the nonlinear gait dynamics. ABSTRACT FROM AUTHOR},
author = {Kurz, M J and Judkins, T and Scott-Pandorf, M and Arellano, C},
isbn = {0895-2779},
issn = {08952779},
journal = {Journal of Sport {\&} Exercise Psychology},
mendeley-groups = {NLTSA Studies},
title = {{Can passive dynamic walking robots provide insights on nonlinear gait dynamics?}},
year = {2007}
}
@inproceedings{Danial2007,
abstract = {The phenomenon of roundoff-error propagation is a well known problem in computations involving floating point arithmetic. Prominent works in the field of error analysis include (1) the error-analysis based on differential error-propagation model for computer algebra system (CAS), (2) the identification and reformulation of instability in a code generated by CAS, (3) estimating the bounds on errors in symbolic and numerical environments. The main concern in these attempts is to control error-propagation by using numerically stable code. Beside these attempts, only few efforts are made towards the theoretical understanding of the underlying process of error propagation. In this paper, we attempt to show that the roundoff-errors may propagate as a random-fractal process. We apply concepts of nonlinear time-series analysis on a series constituting successive roundoff-errors generated during the computation of Henon-map solutions. We estimate the correlation dimension, which is a measure of the fractal dimension, of the series as 5.5 ±0.05. This low value of correlation dimension shows that the error series can be modeled by a low dimensional dynamical system. {\textcopyright} 2007 IEEE.},
