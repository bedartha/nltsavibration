journal = {Physica D: Nonlinear Phenomena},
keywords = {Electroencephalography,First-return maps,Human epilepsy,Intermittency,Period doubling,Rat seizures},
mendeley-groups = {NLTSA Studies},
title = {{Dynamical regimes underlying epileptiform events: Role of instabilities and bifurcations in brain activity}},
year = {2003}
}
