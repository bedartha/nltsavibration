@inproceedings{Parker2016,
abstract = {An investigation into the effect of coding scheme choice for sample entropy analysis of communications data is presented. Semantic content and speaker encoding of transmissions are explored. The results suggest a scheme with a greater number of categories will more likely pass surrogate testing, whether through finer distinctions of semantic categorization or through the additions of a speaker-content interaction. The results also suggest the way semantic categories are formed affects how well the scheme permits discrimination between workload conditions with a known effect. Teams and teamwork play an important role in completing many recreational and work tasks. One important team behaviour that may influence team effectiveness is team coordination (Kozlowski {\&} Ilgen, 2006), which is routinely assessed through examination of team communications (e.g., verbal utterances, text-chat) between team members (Cooke, Gorman {\&} Rowe, 2009). Recently, nonlinear time series analysis techniques, which can be used to characterise the degrees of temporal variation (or complexity) in complex rhythmic signals, have been successfully applied to team communications data. These approaches provide new insights into team communication dynamics while complementing information derived from other more "established" analytical approaches (Gorman, Cooke, Amazeen {\&} Fouse, 2012; Strang, et al, 2012). In general, results from these recent studies have described findings that align with a theory of optimal complexity (Stergiou, Harbourne {\&} Cavanaugh, 2006; Stergiou {\&} Decker, 2011), which posits complex rhythmic systems exhibit optimal and efficient performance when they exhibit a combination of both deterministic (predictable) and stochastic (unpredictable) behaviour, i.e., systems are optimal when they exhibit simultaneous stability and flexibility. Sample entropy (SEn; Richman {\&} Moorman, 2000) is one nonlinear time series technique popular for assessing the degree of complexity in complex rhythmic systems (e.g., stock market trends, heart rhythm, human postural sway). Briefly, SEn quantifies the log-likelihood that matches of sequences of length m in a time series will also match for the length m+1. The consequence is a time series comprised of perfectly repeating sequences will result in a SEn of 0, whereas a time series comprised of random data containing few, or no, repeating sequences will result in a SEn approaching m. Because of its computational simplicity, ability to be reliably applied to relatively short times series (x {\textgreater} 50), and easy application to assessing both continuous and categorical data, SEn is an attractive choice for researchers attempting to obtain a global index of temporal rhythm in team communications data. Interestingly, in a recent analysis of team communications data using SEn obtained from Royal Australian Air Force (RAAF) operators performing a high-fidelity simulated Air Battle Management (ABM) exercise, Strang et al. (2014) showed time series length and the number of semantic categories included in a discrete coding scheme can affect the ability of SEn to meaningfully quantify temporal complexity in team communication data. Specifically, Strang and colleagues demonstrated 30 team verbal utterances were necessary for meaningful quantification of SEn for data encoded by Radio Channel (where separate channels were used only for specific purposes, for example, 'Safety' versus 'Strike'), 50 team utterances for data encoded by Speaker (i.e., which operator was talking), and 60 team utterances when data was encoded by both Speaker and Channel (i.e., which operator was talking and what channel that transmission was made on). A practical implication of this finding is researchers considering SEn analysis of short communication time series (e.g., due to the duration or complexity of a mission) may need to consider the number of categories in their coding schemes relative to the number of data points in those series. In a more theoretically motivated study, Strang et al. (2012) showed SEn applied to categorically coded team communications data could be used to discriminate when teams were performing a simulated low-fidelity ABM task under high or low workload. Specifically, teams under high workload were shown to exhibit lower SEn (lower complexity) in their communications data than teams exposed to lower workload. Strang and colleagues posited this may be due to a reduction in the number of semantic categories teams used for communicating when constrained by higher task demands.},
author = {Parker, Jessica and Best, Christopher and Funke, Gregory and Strang, Adam and Marion, Kaye},
booktitle = {Proceedings of the Human Factors and Ergonomics Society},
doi = {10.1177/1541931213601025},
issn = {10711813},
mendeley-groups = {NLTSA Studies},
title = {{An investigation of coding schemes for sample entropy analysis of communications data}},
year = {2016}
