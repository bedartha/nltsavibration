booktitle = {Applied Nonlinear Time Series Analysis},
doi = {http://dx.doi.org/10.1016/S0140-6736%2806%2969638-4},
isbn = {978-9812561176},
mendeley-groups = {NLTSA Studies},
pmid = {2006525911},
title = {{Time series embedding and reconstruction}},
year = {2005}
}
