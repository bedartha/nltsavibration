title = {{Efficient time-series detection of the strong stochasticity threshold in Fermi-Pasta-Ulam oscillator lattices}},
year = {2011}
}
@article{Gong2011,
abstract = {Multi-channel recording is now a widely used tool in neuroscience research that makes it possible to study the activity of neuron population. The data collected from multiple neurons indicate important information of neural coding rules and brain function-al mechanism, which requires advanced computational techniques to decode. Here we reviewed the methods for multi-channel neural data analysis and gave brief introduction of their typical application for studying different kinds of neural data. One of the common ways to get information about neu-rophysiological system is to use computational analysis to study the features of the neural signals. For process-ing single neuron data, univariate analysis is used to draw neural response properties, such as the peri-stim-ulus time histogram (PSTH) [1] , spike triggered average (STA) [2] , spike triggered covariance (STC) [3] , computa-tion of entropy and patterns carried by spike trains [4, 5] and nonlinear time series analysis [6] . However, the neu-ral system processes and integrates information in large and highly complex neural network with rich interde-pendence and communication among neurons and functional regions, which contain meaningful interac-tions that univariate analysis fails to explain. In order to get deeper insight to the functioning of neural sys-tem, it is necessary to make use of the multivariate analysis to study the relationship of the neural signals which are simultaneously recorded in multiple neurons or functional regions under certain functional tasks or situations. Accordingly, multi-channel neural data anal-ysis methods are developed in wide ranges, with ad-vances in mathematical, statistical and information the-ories, to meet the needs of studying different kinds of neurophysiological data. Here we discuss the relationship of neural signals from two aspects, the synchronized firing or oscillation activities among neurons or brain regions, and the di-rection of neural information flow in neural network.},
