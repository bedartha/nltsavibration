doi = {10.1016/0167-2789(96)00116-9},
isbn = {0167-2789},
issn = {01672789},
journal = {Physica D: Nonlinear Phenomena},
keywords = {Chaotic dyanmics,Coupled ocean-atmosphere models,El Ni{\~{n}}o-Southern Oscillation,Phase locking,Stochastic processes},
