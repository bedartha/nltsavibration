isbn = {1873-2380 (Electronic)$\backslash$r0021-9290 (Linking)},
issn = {18626319},
journal = {Physica Status Solidi (A) Applications and Materials Science},
keywords = {MOSFET,SiC,device design,gamma radiation,radiation resistance},
